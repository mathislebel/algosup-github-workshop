	"version": "0.2.0",
	"configurations": [	
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}/",
			"console": "integratedTerminal"
		},
		{
			"name": "Lua: Current File",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${file}",
			"cwd": "${workspaceFolder}/",
			"luaexe": "d:/harfang/hg_lua/lua.exe",
		},
		{
			"name": "Go: Current file",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${file}"
		}
	]
}
